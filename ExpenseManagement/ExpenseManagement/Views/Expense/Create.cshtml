@model ExpenseEntity

@{
    ViewData["Title"] = "Create New Expenses";
}

<form method="post" asp-action="Create">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group row">
        <h2 class="text-black-50 pl-3">Record Your Expense</h2>
    </div>
    <br />

    <div class=row>
        <div class="col-4">
            <label asp-for="ExpenseDate"></label>
            <input asp-for="ExpenseDate" id="ExpenseDate" class="form-control datetimepicker" />
            <span asp-validation-for="ExpenseDate" class="text-danger"></span>
        </div>
    </div>
    <br />

    <div class=row>
        <div class="col-4">
            <label asp-for="ExpenseGIvenTo"></label>
            <input asp-for="ExpenseGIvenTo" id="ExpenseGIvenTo" class="form-control" />
            <span asp-validation-for="ExpenseGIvenTo" class="text-danger"></span>
        </div>
    </div>
    <br />

    <div class=row>
        <div class="col-4">
            <label asp-for="ExpenseAmount"></label>
            <input asp-for="ExpenseAmount" id="ExpenseAmount" class="form-control" />
            <span asp-validation-for="ExpenseAmount" class="text-danger"></span>
        </div>
    </div>
    <br />

    <div class="w-12 btn-group" role="group">
        <input type="button" class="btn btn-primary mx-1" onclick="Save()" value="Save" />
        <a asp-action="Index" class="btn btn-danger mx-1">Back</a>
    </div>
</form>
<script src="~/script/code.jquery.com_jquery-3.7.0.min.js"></script>
<script src="~/script/expensemanagement.js"></script>
